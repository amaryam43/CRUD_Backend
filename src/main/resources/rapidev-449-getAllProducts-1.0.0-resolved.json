{
  "openapi": "3.0.0",
  "info": {
    "title": "Product Inventory API",
    "description": "This API exposes products in the inventory",
    "contact": {
      "email": "you@your-company.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "developers",
      "description": "Operations available to developers"
    }
  ],
  "paths": {
    "/product": {
      "get": {
        "tags": [
          "developers"
        ],
        "summary": "Get all products",
        "description": "Retrieve all products with optional pagination",
        "operationId": "getAllProducts",
        "responses": {
          "200": {
            "description": "List of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input parameters"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "required": [
          "createdAt",
          "isDeleted",
          "name",
          "price",
          "productId",
          "stockQty"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Widget Adapter"
          },
          "description": {
            "type": "string",
            "example": "High quality adapter for widgets"
          },
          "price": {
            "type": "number",
            "format": "double",
            "example": 29.99
          },
          "stockQty": {
            "type": "integer",
            "example": 100
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "isDeleted": {
            "type": "boolean",
            "example": false
          }
        }
      }
    }
  }
}